#hallway-main
  display none
  #hallway-title-container
    h1
      display inline-block
      font-size 1.0em
    #hallway-room-title
      margin-left 20px
      display inline-block
      font-size 0.7em
  #room-input
    float left
    width auto
    height 100%
    border 2px solid #232367
    display block
    #roomnameinput
      width 350px
      height 60px
      font-size 32px
      margin 5px
    #joinroombtn
      width 80px
      height 60px
      cursor pointer
      font-size 28px
      vertical-align center
      margin-right 5px

  #video-container
    width 100%
    top 50px
    bottom 25px
    left 0px
    position absolute
    display none
    .media-layout
      width 100%
      height 100%
      display inline-block
      box-sizing border-box
      padding 2px
      video
        width 100%
        height 60%
      textarea
        margin-top -5px
        width 90%
        height 38%
        margin-left 5%
        margin-right 5%
        resize none
      .remote-textarea
        background-color #cfcfcf
        font-size 18px
