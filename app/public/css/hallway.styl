hallwaybtn()
  width 80px
  height 60px
  cursor pointer
  font-size 28px
  vertical-align center
  margin-right 5px
  
#hallway-main
  display none
  #hallway-title-container
    h1
      display inline-block
      font-size 1.0em
  #hallway-room-title
    margin-left 20px
    display inline-block
    font-size 0.7em
  #room-input
    float left
    width auto
    height 100%
    border 2px solid #232367
    display block
  #roomnameinput
    width 350px
    height 60px
    font-size 32px
    margin 5px
  #joinroombtn
    hallwaybtn()
  #randomgeneratorbtn
    hallwaybtn()
  #video-container
    width 100%
    top 50px
    bottom 25px
    left 0px
    position absolute
    display none
  .media-layout
    width 100%
    height 100%
    display inline-block
    box-sizing border-box
    padding 2px
    video
      width 100%
      height 60%
    textarea
      margin-top -5px
      width 90%
      height 30%
      margin-left 5%
      margin-right 5%
      resize none
    .remote-textarea
      background-color #cfcfcf
      font-size 18px
    .hallway-layout-options
      height 35px
      width 50%
      min-width 200px
      display inline-block
      margin-left 5%
      margin-right 5%
      padding-bottom 10px
      .hallway-input-text-clip
        width 70%
        height 20px
        vertical-align middle
      .hallway-btn-clip
        width 45px
        height 25px
        cursor pointer
        box-sizing border-box
        vertical-align middle
        margin-left 3px
      .hallway-label-bitrate
        width 100%
        height 100%
        vertical-align top
        font-size .55em 
        color #343434
