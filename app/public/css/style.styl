@import lobby
@import hallway
@import conference
@import lavatory
@import lounge
@import stage
@import modular

html
  width 100%

body
  position absolute
  top 0px
  bottom 0px
  left 200px
  right 200px
  font-size 24px
  font-family "Actor", Arial

#lobby-banner
  display none
  position absolute
  top 10px
  right -150px
  font-size 1.3em
  width 100px
  text-align right
  cursor pointer

a.pagelink
  text-decoration none
  color #101050

a.pagelink.disabled
    pointer-events none
    cursor default
    color grey

footer
  position absolute
  bottom 0px
  font-size 18px
  width 100%
  text-align center

