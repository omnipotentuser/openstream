color-scheme1()
  rgba(172, 186, 203, 0.2)

color-scheme2()
  rgba(222, 236, 253, 0.35)

border-scheme1()
  background-color color-scheme1() 

#lavatory-main
  display none
  h1
    font-size 20px
    color #123432
  label
    font-size 12px
    color white
    margin 10px 20px
  #lavatory-label-resolution
    background-color color-scheme1()
    padding 3px 10px
  #lavatory-label-curbitrate
    background-color color-scheme1()
    padding 3px 10px
  label.lavatory-subtitle
    color #565656
    padding-left 20px
  #lavatory-container
    width 768px
    height 500px
    margin 0 auto
  .lavatory-container-location
    vertical-align top
    width 340px
    height 340px
    border-scheme1()
    margin 20px
    display none

  // menus
  #lavatory-menu-local
    width 100%
    background-color rgba(110,120,130, 1.0)
  #lavatory-menu-remote
    width 100%
    background-color rgba(110,120,130, 1.0)
  .lavatory-menu
    height 50px
    margin-top 1px
  .lavatory-menu-title
    color white
    font-size 14px
    margin 1px 0px 0px 15px
    width 100%
  .lavatory-controls-menu
    width 100%
    margin-left 13px
    margin-top -5px
  #lavatory-controls-bitrate
    display inline-block
    height 20px
    width 93px
  .lavatory-engage
    width 400px 
    height 75px
    margin-left 180px
    margin-right 40px
    font-size 40px

  // videos
  .lavatory-container-video
    background-color black
    border 2px solid black
    width 320px
    height 240px
    margin 2px 8px
  video
    height 100%
    -o-object-fit contain
    -moz-object-fit contain
    -webkit-object-fit contain

  // inputs
  #lavatory-bitrate-local
    width 325px
    height 25px
    margin-left 8px
  #lavatory-bitrate-remote
    width 325px
    height 25px
    margin-left 8px
  input
    width 275px
    height 25px
  .lavatory-container-btn-bitrate-local
    width 40px
    height 25px
    display inline-block
  .lavatory-btn-bitrate-send
    vertical-align middle
    width 40px
    height 25px

  // buttons
  button
    width 100px
    height 25px
    border-radius 3px
    border-width 0px
    background-color rgba(102, 139, 150, 1.0)
    margin-left 3px
    color white
    cursor pointer
    box-shadow: 0 1px 0 #666, 0 2px 0 #444, 0 6px 2px rgba(0,0,0,0.6);
    transition: all 150ms ease
  button:active
    background-color rgba(152, 189, 200, 1.0)
    transform: translateY(3px);
    box-shadow: 0 1px 0 #666, 0 2px 0 #444, 0 2px 2px rgba(0,0,0,0.9);
    border 0px
  button:focus
    background-color rgba(132, 169, 180, 1.0)
  button:hover
    background-color rgba(122, 159, 170, 1.0)

  // dropdowns
  ul.lavatory-dropdown-menu
    position absolute
    margin-left -50px
    width 100px
    background-color color-scheme2()
    list-style none
    text-decoration none
    font-size 1em
    display none
    li a
      margin: 0 0 10px 0;
      font-size 12px
      list-style none
      text-decoration none
      color white
